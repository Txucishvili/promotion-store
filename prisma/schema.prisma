// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("MONGO_PRISMA_URL") // uses connection pooling
  directUrl = env("MONGO_URL_NON_POOLING") // uses a direct connection
}

model User {
  id    String @id @map("_id")
  name  String
  email String @unique
}

model tag {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String      @unique
  categoryIds String[]    @db.ObjectId
  categories  categorie[] @relation(fields: [categoryIds], references: [id])
  createdAt   DateTime    @default(now())
}

model categorie {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  tagIds    String[]  @db.ObjectId
  tags      tag[]     @relation(fields: [tagIds], references: [id])
  createdAt DateTime  @default(now())
  productId String[]
  products  product[]
}

model product {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  slug          String?
  price         String?
  newPrice      String?
  rating        String?
  descriptions  String[]
  photo_main    String
  photo_gallery String[]
  categories    categorie @relation(fields: [categoryId], references: [id])
  categoryId    String    @db.ObjectId
  orders        order[]
  show          Boolean   @default(false)
  timer         Boolean   @default(false)
  endDate       DateTime?
  createdAt     DateTime  @default(now())
}

type orderDetails {
  color String
  type  String
  size  String
}

model order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  phoneNumber Int
  fullName    String
  product     product  @relation(fields: [productId], references: [id])
  productId   String   @map("product") @db.ObjectId
  createdAt   DateTime @default(now())
}

model contact {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  phoneNumber Int
}
